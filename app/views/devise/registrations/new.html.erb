<div class="container" style="max-width: 500px; padding-top: 100px">
  <div class="panel panel-default devise-bs">
    <div class="panel-heading">
      <p style="font-size:3rem; ">
        Sign up
      </p>
      <h4><%#= t('.sign_up', default: 'Sign up') %></h4>
    </div>
    <div class="panel-body">
      <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= f.error_notification %>
        <div class="form-group">
          <%= f.label :email , style: 'color: #a3a3a3; font-size: 2rem'%> <p style="color: red">(당첨시 연락받으실 메일입니다!)</p>
          <%= f.email_field :email, required: true, autofocus: true, class: 'form-control'%>
        </div>
        <div class="form-group">
          <%= f.label '배그 ID' , style: 'color: #a3a3a3; font-size: 2rem'%> <p style="color: red">(앞으로 등록하실 사진의 배그ID와 동일해야합니다!)</p>
          <%= f.text_field :bgid, required: true , class: 'form-control'%>
        </div>
        <div class="form-group">
          <%= f.label :password , style: 'color: #a3a3a3; font-size: 2rem'%>
          <%= f.password_field :password, required: true, autocomplete: "off",  hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length), class: 'form-control' %>
        </div>
        <div class="form-group">
          <%= f.label :password_confirmation , style: 'color: #a3a3a3; font-size: 2rem'%>
          <%= f.password_field :password_confirmation, required: true, autocomplete: "off", class: 'form-control'%>
        </div>
        <p style="text-align: center">회원가입 시 <a href="/terms">이용약관</a>에 동의하게 됩니다. </p>
        <%= f.submit t('.sign_up', default: 'Sign up'), class: 'custom-btn' %>
      <% end %>
    </div>
  </div>
  <%= render 'devise/shared/links' %>
</div>


