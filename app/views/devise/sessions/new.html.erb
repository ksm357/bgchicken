
<div class="container" style="max-width: 500px; padding-top: 100px">
  <div class="panel panel-default devise-bs">
    <div class="panel-heading">
      <p style="font-size:3rem; ">
        배그 치킨
      </p>
    </div>
    <div class="panel-body">
      <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { role: 'form' }) do |f| %>
        <div class="form-group">
          <%= f.label :email , style: 'color: #a3a3a3; font-size: 2rem' %>
          <%= f.email_field :email, autofocus: true, class: 'form-control' %>
        </div>
        <div class="form-group">
          <%= f.label :password, style: 'color: #a3a3a3; font-size: 2rem' %>
          <%= f.password_field :password, autocomplete: 'off', class: 'form-control' %>
        </div>
        <% if devise_mapping.rememberable? %>
          <div class="checkbox">
            <%= f.label :remember_me do %>
              <%= f.check_box :remember_me %> <%= t('.remember_me', default: 'Remember me') %>
            <% end %>
          </div>
        <% end %>
        <%= f.submit  t('.sign_in', default: 'Log in'), class: 'custom-btn' %>
      <% end %>
    </div>
  </div>
  <%= render 'devise/shared/links' %>
</div>


