    	    var target = this.hash;
    	    var $target = $(target);
    
    	    $('html, body').stop().animate({
    	        scrollTop: $target.offset().top - 70 
    	    }, 700);
    	});
    });
 
    $(window).scroll(function() {
      $(".scroll").css( "display", "inline");
    });
    $(".scroll").click(function() {
        $('html,body').animate({
            scrollTop: 0 }, 700);
